	{% embed 'shared/_tabs.html.twig' %}
		{% block tabs %}

			{% embed 'shared/_tab.html.twig' with { route: 'app_micro_post' } %}
				{% block content %}
					All Posts
				{% endblock %}
				{% block path %}
					{{ path('app_micro_post') }}
				{% endblock %}
			{% endembed %}

			{% embed 'shared/_tab.html.twig' with { route: 'app_micro_post_trending', classes: 'ml-2' } %}
				{% block content %}
					Most Liked Posts
				{% endblock %}
				{% block path %}
					{{ path('app_micro_post_trending') }}
				{% endblock %}
			{% endembed %}

			{% embed 'shared/_tab.html.twig' with { route: 'app_micro_post_followed', classes: 'ml-2' } %}
				{% block content %}
					Followed Posts
				{% endblock %}
				{% block path %}
					{{ path('app_micro_post_followed') }}
				{% endblock %}
			{% endembed %}

		{% endblock %}
	{% endembed %}